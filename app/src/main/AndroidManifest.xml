<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aya.recyclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LinearLayoutManagerActivity" />
        <activity android:name=".activities.HorizontalLinearLayoutManagerActivity" />
        <activity android:name=".activities.ReverseLayoutLinearLayoutManagerActivity" />
        <activity android:name=".activities.StackFromEndLinearLayoutManagerActivity" />
        <activity android:name=".activities.GridLayoutManagerActivity" />
        <activity android:name=".activities.DivisibleByTenGridLayoutManagerActivity" />
        <activity android:name=".activities.StaggeredGridLayoutManagerActivity" />
        <activity android:name=".activities.DividerItemDecorationActivity" />
    </application>

</manifest>