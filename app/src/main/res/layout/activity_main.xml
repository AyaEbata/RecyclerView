<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aya.recyclerview.MainActivity">

    <Button
        android:text="@string/linear_layout_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_manager_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_manager_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="14dp"
        android:id="@+id/horizontal_button" />

    <Button
        android:text="@string/reverse_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontal_button"
        android:layout_alignLeft="@+id/horizontal_button"
        android:layout_alignStart="@+id/horizontal_button"
        android:layout_marginTop="14dp"
        android:id="@+id/reverse_layout_button" />

    <Button
        android:text="@string/stack_from_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reverse_layout_button"
        android:layout_alignLeft="@+id/reverse_layout_button"
        android:layout_alignStart="@+id/reverse_layout_button"
        android:layout_marginTop="14dp"
        android:id="@+id/stack_from_end_button" />

</RelativeLayout>
